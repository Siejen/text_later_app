
<div class="container">
	<div class='col-md-offset-4 col-md-4'>
		<h1>Schedule a Text</h1>
	</div>

	<div class="row">
		<%= form_for [@user, @savedMsg] do |f| %>
			<div class='col-md-offset-3 col-md-6'>
				<%= f.telephone_field :send_num, placeholder: "send to:", autofocus: true, class: 'form-control' %>
			</div>
			<div class='col-md-offset-3 col-md-6'>
				<%= f.text_field :subject, placeholder: "subject", class: 'form-control' %>
			</div><br>
			<div class='col-md-offset-3 col-md-6'>
				<%= f.text_area :content, placeholder: "content", class: 'form-control' %>
			</div><br>
			<div class='col-md-offset-3 col-md-6'>
				<%= f.submit "Text It", class: 'btn btn-primary form-control' %>
			</div>
			<div class='col-md-offset-4 col-md-4'>
				<%= f.datetime_select :time, default: Time.now, ampm: true %>
			</div>
		<% end %>
	</div>

	<hr class="featurette-divider"/>

	<a href="/users/<%= @user.id %>", class: 'btn btn-primary'>User Page</a> 
	<%= link_to "Saved Messages", user_saved_msgs_url %>

</div>