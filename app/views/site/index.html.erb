<div class="container">
	<h1>Text Me Maybe <h3><i>No more excuses, text now deliver later!</i></h3></h1>


	<p>Give the option to see all messages</p>
	<p>Give the option to create</p>
	<p>Give the option to edit</p>
	<hr class="featurette-divider">

	<!-- This button only shows when user is not logged in.
	 -->
	<h3>Ready to Create a message?</h3>

	<!-- Button trigger modal -->
	<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
	  Try It Out
	</button>

	<!-- Modal -->
	<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
	        <h4 class="modal-title text-center" id="myModalLabel"><i class="fa fa-comments-o fa-2x"></i>   Text Me Maybe</h4>
	      </div>
	      <div class="modal-body text-center">
	      	<div id="sent">
	      		<h3>Your message has been scheduled!</h3>
	      		<%= image_tag "message_sent.png", style: "margin-top:20px; width:200px;"%><br><br>
	      	</div>

	      	<div id="form">
		      	<%= render "shared/templates" %>

		        <%= form_for @unsaved_msg do |f| %>
							<%= f.telephone_field :send_num, placeholder: "Send To", class: "form-control text-center" %>
							<%= f.text_field :content, placeholder: "Message", class: "content-body form-control text-center" %>
							<span class="form_element" id="date">
								<%= f.datetime_select :time, default: Time.now, ampm: true %>
							</span>
				      <div class="modal-footer">
				      <button type="submit" id="unsavebutton" data-loading-text="Sending..." class="btn btn-primary form-control">
							  Text It
							</button>
							<% end %>
			      </div>
					</div>
	      </div>
	    </div>
	  </div>
	</div>


	<hr class="featurette-divider">

	<!-- Need to hide this later -->
	<p><%= link_to 'Monitoring Workers', sidekiq_web_path %></p>


</div>  <!-- Container Close -->



