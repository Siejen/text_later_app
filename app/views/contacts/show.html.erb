


<div class="container">
	<div class="jumbotron">
		
		<h2>Contact: <%= @contact.first_name %> <%= @contact.last_name %></h2>

			<% flash.each do |name, msg| %>
				<h3 id="<%= name %>" style="color:green"><%= msg %></h3>
			<% end %> 

			<div> Phone: 
				<%= @contact.phone_num %>
			</div>
		
		<div class="row">
	    <a class="btn btn-success col-md-offset-7 col-md-3" href="/users/<%= @user.id %>/contacts/<%= @contact.id %>/edit">Edit</a>

	    <%=  button_to "Delete", user_contact_path(@user.id, @contact.id), method: :delete, class: "btn-sm btn-danger col-md-offset-7 col-md-3" %>			
		</div>

	</div>
</div>