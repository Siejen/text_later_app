
<div class="container">
	<div class='page-header'>
		<h1>Add Contact</h1>
	</div>

	<div class="row">

		<%= form_for [@user, @contact] do |f| %>

			<div class='col-md-offset-3 col-md-6'>
				<%= f.text_field :first_name, placeholder: "First Name", autofocus: true, class: 'form-control' %>
			</div>
			<div class='col-md-offset-3 col-md-6'>
				<%= f.text_field :last_name, placeholder: "Last Name", class: 'form-control subject-body' %>
			</div><br>
			<div class='col-md-offset-3 col-md-6'>
				<%= f.telephone_field :phone_num, placeholder: "Phone Number", class: 'form-control content-body' %>
			</div><br>
			<div class='col-md-offset-3 col-md-6'>
				<%= f.submit "Add", class: 'btn btn-primary form-control' %>
			</div>

		<% end %>
	</div>

	<hr class="featurette-divider"/>



</div>