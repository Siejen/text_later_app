<h1>Contacts#edit</h1>
<p>Find me in app/views/contacts/edit.html.erb</p>


<div class="container">
	
	<div class='col-md-offset-3 col-md-6'>
		<h1>Edit Contact</h1>
	</div>

	<div>
		
		<%= form_for [@user, @contact] do |f| %>
			<div class='col-md-offset-3 col-md-6'>
				<%= f.text_field :first_name, placeholder: "change first name:", autofocus: true, class:"form-control" %>
			</div>
			<div class='col-md-offset-3 col-md-6'>
				<%= f.text_field :last_name, placeholder: "change last name", class:"form-control" %>
			</div><br>
			<div class='col-md-offset-3 col-md-6'>
				<%= f.telephone_field :phone_num, placeholder: "change phone number", class:"form-control" %>
			</div><br>
			<div class='col-md-offset-3 col-md-6'>
				<%= f.submit "Update", class: "form-control btn btn-primary" %>
			</div>
		<% end %>
			<div class='col-md-offset-3 col-md-6'>
				<%=  button_to "Delete", user_saved_msg_path(@user.id, @contact.id), method: :delete, class: "form-control btn btn-danger", :onclick => "confirm('Please Confirm')" %>
			</div>



	</div>
	


</div>